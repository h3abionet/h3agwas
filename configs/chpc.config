params {
    baseQC {
        referenceSequence = 'https://hgdownload.soe.ucsc.edu/goldenPath/hg19/bigZips/hg19.fa.gz'
    }
}

executor {
    name = 'pbspro'
    queue = 'serial'
    queueSize = 10
}

singularity {
    enabled = true
    automounts = true
    cacheDir = "${HOME}/singularity"
}

process {
    beforeScript = 'module load chpc/singularity/3.5.3'
    clusterOptions = '-P CBBI1243 -l select=1'

    cpus = 1
    time = 10.m
    memory = 20.GB

    withLabel:smallMemory {
        cpus = 1
        time = 5.m
        memory = 50.MB
    }
    withLabel:mediumMemory {
        cpus = 23
        time = 30.m
        memory = 1.GB
    }
    withLabel:bigMemory {
        time = 2.h
        cpus = 23
        memory = 120.GB
    }
}
